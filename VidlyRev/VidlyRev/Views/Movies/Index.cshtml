@model VidlyRev.ViewModels.MoviesViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Movies</h2>

    @if (Model.Movies.Count == 0)
    {
        <p>We do not have any movies yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(movie.Name, "Details", new { movie.Id })
                        </td>
                        <td>
                            @movie.Genre.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


